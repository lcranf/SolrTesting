@model IEnumerable<SolrTesting.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Id
        </th>
        <th>
            OrderDate
        </th>
        <th>
            DeliveryDate
        </th>
        <th>
            CustomerName
        </th>
        <th>
            OrderName
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>@item.Id</td>
        <td>
            @String.Format("{0:g}", item.OrderDate)
        </td>
        <td>
            @String.Format("{0:g}", item.DeliveryDate)
        </td>
        <td>
            @item.CustomerName
        </td>
        <td>
            @item.OrderName
        </td>
    </tr>
}

</table>


